<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="@dimen/item_chat_from_user_linear_margin_start"
        android:layout_marginVertical="@dimen/item_chat_from_user_linear_margin_vertical"
        android:layout_marginEnd="@dimen/item_chat_from_user_linear_margin_end"
        android:background="@drawable/background_chat_from_user"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvChatFromUserMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:paddingHorizontal="@dimen/item_chat_from_user_tv_message_padding_horizontal"
            android:paddingVertical="@dimen/item_chat_from_user_tv_message_padding_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/item_chat_from_user_tv_message_text_size"/>

        <TextView
            android:id="@+id/tvChatFromUserTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:layout_gravity="end"
            android:paddingHorizontal="@dimen/item_chat_from_user_tv_time_padding_horizontal"
            android:paddingBottom="@dimen/item_chat_from_user_tv_time_padding_bottom"
            android:textColor="@color/tv_time_from_user"
            android:textSize="@dimen/item_chat_from_user_tv_time_text_size" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>