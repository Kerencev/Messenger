<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/background_nav_drawer"
    android:orientation="vertical"
    android:paddingStart="@dimen/nav_header_padding_start"
    tools:ignore="RtlSymmetry">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivNavHeaderAvatar"
        android:layout_width="@dimen/nav_header_iv_avatar_width"
        android:layout_height="@dimen/nav_header_iv_avatar_height"
        android:layout_marginTop="@dimen/nav_header_iv_avatar_margin_top" />

    <TextView
        android:id="@+id/tvNavHeaderLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/nav_header_tv_login_margin_top"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/white"
        android:textSize="@dimen/nav_header_tv_login_text_size"
        tools:text="Sergo1996" />

    <TextView
        android:id="@+id/tvNavHeaderEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/white"
        android:textSize="@dimen/nav_header_tv_email_text_size"
        tools:text="Serg@mail.com" />

</androidx.appcompat.widget.LinearLayoutCompat>