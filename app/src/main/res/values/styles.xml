<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RegisterTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/unselected_white</item>
        <item name="boxStrokeColor">@color/unselected_white</item>
        <item name="hintTextColor">@color/unselected_white</item>
        <item name="android:textColorHint">@color/unselected_white</item>
        <item name="android:textColor">@color/unselected_white</item>
    </style>

    <style name="ChatTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@null</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TitleToolbarTextAppearance" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SubtitleToolbarTextAppearance" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/unselected_white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BottomNavigationTextAppearance" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceInactive">@style/BottomNavigationTextAppearance</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationTextAppearance</item>
        <item name="itemIconTint">@null</item>
        <item name="itemTextColor">@drawable/bottom_navigation_text_color</item>
        <item name="itemPaddingBottom">8dp</item>
    </style>

    <style name="FloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/fab_background</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="NavigationDrawerTextAppearance" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/user_name_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CardSettingsStyle">
        <item name="android:layout_height">@dimen/fragment_settings_card_height</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="rippleColor">@color/ripple_card_settings</item>
        <item name="cardElevation">0dp</item>
        <item name="cornerRadius">0dp</item>
    </style>

    <style name="TextSettingsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:paddingStart">@dimen/fragment_settings_tv_items_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/fragment_settings_tv_items_padding_horizontal</item>
        <item name="android:textColor">@color/user_name_text</item>
        <item name="android:textSize">@dimen/fragment_settings_tv_profile_text_size</item>
    </style>

</resources>